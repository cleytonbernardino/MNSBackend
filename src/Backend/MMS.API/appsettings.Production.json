{
  "ConnectionStrings": {
    "Connection": "DEFINIDO VIA SECRET MANAGER OU VARI√ÅVEL DE AMBIENTE"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Settings": {
    "JWT": {
      "ExpiryInMinutes": 15
    }
  }
}